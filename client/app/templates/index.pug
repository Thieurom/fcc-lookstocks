doctype
html(lange='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='x-ua-compatible', content='ie=edge')
        title LookStocks
        meta(name='description', content='LookStocks')
        meta(name='author', content='Doan Thieu')
        meta(name='viewport', content='width=device-width,initial-scale=1')
        link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto:300,400,500')
        link(rel='stylesheet', href='/styles/main.css')

    body
        header.header
            h1.h1
                a(href='/') LookStocks

        main.main
            .chart-wrapper
                .stock-chart#stock-chart
                .toggle
                    button.toggler(type='button')

            .menu
                form.form
                    span.form__info Symbol not found.
                    input.form__input(name='input', type='text', placeholder='Enter stock symbol')
                    input.form__submit(name='submit', type='submit', value='Add')

                .stock-table
                    .stock
                        .stock__detail #[span.stock__symbol GOOG] – #[span.stock__name Alphabet Inc]
                        button.stock__remove X

                    .stock
                        .stock__detail #[span.stock__symbol MSFT] – #[span.stock__name Microsoft Corporation]
                        button.stock__remove X

                    .stock
                        .stock__detail #[span.stock__symbol AAPL] – #[span.stock__name Apple Inc.]
                        button.stock__remove X

    footer.footer
        span.footer__note 2017. Made by #[a.footer__link(href='https://twitter.com/lethieu') lethieu]. Using #[a.footer__link(href='https://www.quandl.com' Quandl) Quandl], #[a.footer__link(href='http://www.highcharts.com' Highcharts) Highcharts].

